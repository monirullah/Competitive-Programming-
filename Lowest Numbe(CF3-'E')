#include<iostream>
#include<vector>
 
using namespace std;
int main()
{
    int n,i;
    cin>> n;
 
    vector<int> A(n);
    for(int i=0;i<n;i++)
    {
        cin>>A[i];
    }
 
    int mini = A[0];
    int pos =0;
    for( i=0;i<n;i++)
    {
        if(A[i]<mini)
        {
            mini = A[i];
            pos = i;
 
        }
 
 
    }
    cout<< mini << " "<<  pos+1<< endl;
 
}
